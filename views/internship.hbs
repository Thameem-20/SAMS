    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/cards.css">
</head>

<body>
    <nav>
        <h3><a href="/dashboard">SAMS</a></h3>
        <ul>
            <li><a href="/marks">MARKS</a></li>
            <li><a href="/projects">PROJECTS</a></li>
            <li><a href="/achievement">ACHIEVEMENTS</a></li>
            <li><a href="/internship">INTERNSHIP</a></li>
        </ul>
    </nav>
    <div class="container" id="container">
        <div class="createBtn">
            <button onclick="location.href='/addInternship'">
                <span>
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24">
                        <path fill="none" d="M0 0h24v24H0z"></path>
                        <path fill="currentColor" d="M11 11V5h2v6h6v2h-6v6h-2v-6H5v-2z"></path>
                    </svg> Create
                </span>
            </button>
        </div>
    </div>
    <script>
        // Make a simple GET request using fetch
        fetch('/auth/internship')
            .then(response => response.json())
            .then(data => {
                const internships = data.internships;
                const internshipCont = document.getElementById('container')
                internships.forEach(internship => {
                    console.log(internship)
                    const internshipCard = document.createElement("div")
                    internshipCard.classList.add("container-card")

                    const internshipTitle = document.createElement("h1")
                    internshipTitle.textContent = internship.title;

                    const imageElement = document.createElement("img")
                    imageElement.src = internship.image_path;
                    imageElement.alt = internship.title;

                    const internshipDate = document.createElement("p")
                    internshipDate.textContent = internship.date;

                    const internshipLocation = document.createElement("p");
                    internshipLocation.textContent = internship.location;

                    const internshipDescription = document.createElement("p");
                    internshipDescription.textContent = internship.description;

                    internshipCard.appendChild(internshipTitle);
                    internshipCard.appendChild(imageElement);
                    internshipCard.appendChild(internshipDate);
                    internshipCard.appendChild(internshipLocation);
                    internshipCard.appendChild(internshipDescription);

                    internshipCont.appendChild(internshipCard);

                })
            }).catch(err => {
                console.log(err)
            })
    </script>
