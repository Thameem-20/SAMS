<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SAMS:Competitions and Awards</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous" />

    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/cards.css">

</head>

<body>
    <nav>
        <h3><a href="/dashboard">SAMS</a></h3>
        <ul>
            <li><a href="/marks">MARKS</a></li>
            <li><a href="/projects">PROJECTS</a></li>
            <li><a href="/achievement">ACHIEVEMENTS</a></li>

        </ul>
    </nav>

    <div class="container " id="container">

    </div>
    <div class="createBtn">
        <button onclick="location.href='/addAwards'">
            <span>
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24">
                    <path fill="none" d="M0 0h24v24H0z"></path>
                    <path fill="currentColor" d="M11 11V5h2v6h6v2h-6v6h-2v-6H5v-2z"></path>
                </svg> Create
            </span>
        </button>
    </div>
    <footer>
        <a href="/auth/logout">Logout</a>
    </footer>
    <script>
        // Make a simple GET request using fetch
        fetch('/auth/award')
            .then(response => response.json())
            .then(data => {
                const awards = data.awards;
                const awardCont = document.getElementById('container')
                awards.forEach(award => {
                    const awardCard = document.createElement("div")
                    awardCard.classList.add("container-card")

                    const awardTitle = document.createElement("h1")
                    awardTitle.textContent = award.title;

                    const imageElement = document.createElement("img")
                    imageElement.src = award.image_path;
                    imageElement.alt = award.title;

                    const awardDate = document.createElement("p")
                    awardDate.textContent = award.date;

                    const awardLocation = document.createElement("p");
                    awardLocation.textContent = award.location;

                    const awardDescription = document.createElement("p");
                    awardDescription.textContent = award.description;

                    awardCard.appendChild(awardTitle);
                    awardCard.appendChild(imageElement);
                    awardCard.appendChild(awardDate);
                    awardCard.appendChild(awardLocation);
                    awardCard.appendChild(awardDescription);

                    awardCont.appendChild(awardCard);

                })
            }).catch(err => {
                console.log(err)
            })
    </script>
</body>

</html>