</head>

<body>
    <nav>
        <h3><a href="/dashboard">SAMS</a></h3>
        <ul>
            <li><a href="/marks">MARKS</a></li>
            <li><a href="/projects">PROJECTS</a></li>
            <li><a href="/achievement">ACHIEVEMENTS</a></li>

        </ul>
    </nav>

    <div class="container" id="container">

    </div>
    <div class="createBtn">
        <button onclick="location.href='/addAchievement'">
            <span>
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24">
                    <path fill="none" d="M0 0h24v24H0z"></path>
                    <path fill="currentColor" d="M11 11V5h2v6h6v2h-6v6h-2v-6H5v-2z"></path>
                </svg> Create
            </span>
        </button>
    </div>
    <footer>
        <div>Â© 2021 - Made with &hearts; by Mausooq & Nafih</div>
        <a href="/auth/logout">Logout</a>
    </footer>
    <script>
        // Make a simple GET request using fetch
        fetch('/auth/achievements')
            .then(response => response.json())
            .then(data => {
                const achievements = data.achievements;
                const achievementCont = document.getElementById('container')
                achievements.forEach(achievement => {
                    const achievementCard = document.createElement("div")
                    achievementCard.classList.add("container-card")

                    const achievementTitle = document.createElement("h1")
                    achievementTitle.textContent = achievement.title;

                    const imageElement = document.createElement("img")
                    imageElement.src = achievement.image_path;
                    imageElement.alt = achievement.title;

                    const achievementDate = document.createElement("p")
                    achievementDate.textContent = achievement.date;

                    const achievementLocation = document.createElement("p");
                    achievementLocation.textContent = achievement.location;

                    const achievementDescription = document.createElement("p");
                    achievementDescription.textContent = achievement.description;

                    achievementCard.appendChild(achievementTitle);
                    achievementCard.appendChild(imageElement);
                    achievementCard.appendChild(achievementDate);
                    achievementCard.appendChild(achievementLocation);
                    achievementCard.appendChild(achievementDescription);

                    achievementCont.appendChild(achievementCard);

                })
            }).catch(err => {
                console.log(err)
            })
    </script>
</body>

</html>